<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:paddingLeft="@dimen/login_typing_padding_left"
        android:paddingRight="@dimen/login_typing_padding_left"
        android:paddingTop="@dimen/joinus_logo_padding_top"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/joinus_logo_width_size"
            android:layout_height="@dimen/joinus_logo_height_size"
            android:layout_gravity="center"
            android:background="@drawable/join_us_logo_pic"
            android:paddingBottom="@dimen/joinus_logo_padding_top"/>

        <com.and.wodness.CustomTextView
            android:paddingTop="@dimen/joinus_logo_padding_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W O D N E S S"
            android:textColor="@android:color/black"
            android:textSize="@dimen/joinus_logo_textsize"
            android:layout_gravity="center"

            android:paddingBottom="@dimen/joinus_logo_padding_top"/>
        <com.and.wodness.CustomButton_demi
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="C O N N E C T I N G  W I T H  F A C E B O O K"
            android:background="@drawable/connect_with_facebook"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:id="@+id/joinus_connect_fb_button"
            />
            <LinearLayout
                android:paddingTop="@dimen/joinus_line_padding_top_size"
                android:paddingBottom="@dimen/joinus_line_padding_bottom_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="@dimen/joinus_line_size"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#c0c0c0" />
                <com.and.wodness.CustomTextView_number
                    android:paddingLeft="@dimen/joinus_line_padding_left_right_size"
                    android:paddingRight="@dimen/joinus_line_padding_left_right_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O R"
                    android:textSize="14sp"/>
                <View
                    android:layout_width="@dimen/joinus_line_size"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#c0c0c0"/>
            </LinearLayout>
        <com.and.wodness.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/joinus_username_edittext"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="@string/username_hint"
            android:textColorHint="@color/edittext_color_light_blue"
            android:background="@drawable/edt_bg_selector"
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_marginBottom="13dp"
            />

        <com.and.wodness.CustomEditText

            android:id="@+id/passWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/joinus_password_edittext"
            android:hint="@string/password_hint"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="@color/edittext_color_light_blue"
            android:background="@drawable/edt_bg_selector"
            android:layout_marginBottom="14dp"/>
        <com.and.wodness.CustomEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/joinus_email_edittext"
            android:hint="@string/email_hint"
            android:textColorHint="@color/edittext_color_light_blue"
            android:background="@drawable/edt_bg_selector"
            />
        <LinearLayout
            android:paddingTop="@dimen/joinus_center_text_padding_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.and.wodness.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="10sp"
                android:id="@+id/htmlstring1"
                />
            <com.and.wodness.CustomTextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="10sp"
                android:id="@+id/htmlstring2"
                />
            <com.and.wodness.CustomButton
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@android:color/transparent"
                android:textColor="@color/colorProgress"
                android:textSize="10sp"
                android:id="@+id/joinus_privat"

                />
        </LinearLayout>
        <com.and.wodness.CustomButton
            android:layout_marginTop="@dimen/joinus_button_margin_top"
            android:id="@+id/joinus_creat_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/create_an_account"
            android:text="C R E A T E   A N   A C C O U N T"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_marginTop="@dimen/joinus_member_bottom_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.and.wodness.CustomTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="A L R E A D Y   M E M B E R ?"
                android:textSize="13sp"/>
            <com.and.wodness.CustomButton
                android:layout_marginLeft="5dp"
                android:textAlignment="viewStart"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="L O G I N"
                android:textColor="@color/colorProgress"
                android:background="@android:color/transparent"
                android:id="@+id/joinus_login_button"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
